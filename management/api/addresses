var documents = require("document");

var log = require("log");
log.setLevel("INFO");



var order = JSON.parse(request.rawBody);
for(obj in order){
    order[obj] = order[obj]
}
if(order["action"] == "get"){
    var queryParams = {};
    var fieldsParams = "address, name, number";
    var queryString = 'formType = "address"';

    queryParams["count"] = "true";
    queryParams["query"] =  queryString;
    queryParams["fields"] =  fieldsParams;

    log.info(JSON.stringify(queryParams))
    results = documents.query(queryParams);
    return results.result.documents
}else{
    var saveResult = documents.save(order);
    log.info(JSON.stringify(saveResult))
    return saveResult

}
